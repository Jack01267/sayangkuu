    <script>
    document.addEventListener('DOMContentLoaded', () => {

        // --- Kontainer & Selektor Elemen Kunci ---
        const body = document.body;
        const loadingOverlay = document.getElementById('loading-overlay');
        const appContainer = document.querySelector('.app-container');

        // Intro Video
        const videoIntroScreen = document.getElementById('video-intro-screen');
        const introVideo = document.getElementById('intro-video');
        const skipIntroBtn = document.getElementById('skip-intro-btn');

        // Navigasi Halaman
        const heroSection = document.getElementById('hero-section');
        const messageSection = document.getElementById('message-section');
        const openMessageBtn = document.getElementById('open-message-btn');
        const closeButton = document.getElementById('close-button');
        const stickyBtnWrapper = document.getElementById('sticky-btn-wrapper');
        const progressDots = document.querySelectorAll('.progress-dot');

        // Musik
        const musicPlayer = document.getElementById('music-player');
        const bgMusic = document.getElementById('bg-music');
        const musicIcon = musicPlayer.querySelector('.music-icon');

        // Countdown
        const countdownArea = document.getElementById('countdown-area');

        // Parallax & Partikel
        const heroContent = document.getElementById('hero-content');
        const particleContainer = document.getElementById('particle-container');
        const parallaxLayers = particleContainer.querySelectorAll('.parallax-layer');

        // Konten Pesan
        const messageParagraphs = document.querySelectorAll('.message-paragraph');
        const finalSignature = document.getElementById('final-signature');
        
        // --- PENINGKATAN: Perbaikan Timing Animasi ---
        // Mencegah animasi utama berjalan di belakang intro.
        // Kita tambahkan style-block baru untuk menimpa CSS animasi sementara.
        const styleSheet = document.createElement('style');
        styleSheet.innerHTML = `
            /* Tahan animasi ini hingga intro selesai */
            .hero-content, .corner-ornament, .hero-title, .hero-subtitle, 
            #countdown-area, .music-player, .progress-indicator {
                animation: none !important;
                opacity: 0 !important;
            }
            
            /* Setelah intro selesai, kelas ini ditambahkan ke body, 
               dan animasi aslinya akan kita picu kembali */
            body.main-content-visible .hero-content {
                animation: hero-grand-entrance 2.5s var(--ease-royal) 0.5s forwards !important;
            }
            body.main-content-visible .corner-ornament {
                animation: ornament-reveal 1.5s var(--ease-bounce) 2s forwards !important;
            }
            body.main-content-visible .hero-title {
                animation: title-majestic-reveal 2s var(--ease-royal) 1.2s forwards !important;
            }
            body.main-content-visible .hero-subtitle {
                animation: subtitle-fade-in 1.5s var(--ease-smooth) 1.5s forwards !important;
            }
            body.main-content-visible #countdown-area {
                animation: countdown-reveal 1.8s var(--ease-smooth) 1.8s forwards !important;
            }
            body.main-content-visible .music-player,
            body.main-content-visible .progress-indicator {
                animation: fade-in 1s var(--ease-smooth) 2s forwards !important;
            }
        `;
        document.head.appendChild(styleSheet);

        // --- 1. Logika Loading & Intro ---

        // Sembunyikan loading overlay utama setelah semua aset halaman (video, dll) dimuat
        window.addEventListener('load', () => {
            loadingOverlay.classList.add('hidden');
            setTimeout(() => {
                loadingOverlay.style.display = 'none';
                // Coba putar video intro (beberapa browser mungkin memblokir)
                introVideo.play().catch(e => {
                    console.warn("Autoplay video intro diblokir. Pengguna harus berinteraksi.");
                });
            }, 1000); // Tunggu animasi fade-out loader
        });

        // Fungsi untuk menyembunyikan intro
        function hideIntro() {
            if (!videoIntroScreen.classList.contains('hidden')) {
                videoIntroScreen.classList.add('hidden');
                body.classList.add('main-content-visible'); // Picu animasi utama
                
                // Coba putar musik latar belakang setelah interaksi pertama
                // Ini meningkatkan kemungkinan autoplay berhasil
                bgMusic.play().then(() => {
                    musicPlayer.classList.add('playing');
                    musicIcon.textContent = '‚è∏Ô∏è';
                }).catch(e => {
                    console.warn("Autoplay musik diblokir. Pengguna harus mengklik ikon musik.");
                });
                
                // Hapus elemen intro setelah transisi selesai
                setTimeout(() => videoIntroScreen.style.display = 'none', 1500);
            }
        }

        // Event listener untuk tombol skip dan video berakhir
        skipIntroBtn.addEventListener('click', () => {
            introVideo.pause();
            hideIntro();
        });
        introVideo.addEventListener('ended', hideIntro);

        // --- 2. Pemutar Musik ---
        musicPlayer.addEventListener('click', () => {
            if (bgMusic.paused) {
                bgMusic.play();
                musicPlayer.classList.add('playing');
                musicIcon.textContent = '‚è∏Ô∏è';
            } else {
                bgMusic.pause();
                musicPlayer.classList.remove('playing');
                musicIcon.textContent = 'üéµ';
            }
        });

        // --- 3. Navigasi Halaman (Hero <-> Pesan) ---
        function updateProgressDots(activeIndex) {
            progressDots.forEach((dot, index) => {
                dot.classList.toggle('active', index === activeIndex);
            });
        }

        openMessageBtn.addEventListener('click', () => {
            heroSection.classList.add('is-exiting');
            messageSection.classList.add('is-active');
            stickyBtnWrapper.style.opacity = '0';
            stickyBtnWrapper.style.pointerEvents = 'none';
            updateProgressDots(1);
            messageSection.scrollTop = 0; // Selalu mulai dari atas pesan
            
            // Picu observer untuk paragraf (jika ada yang sudah terlihat)
            messageParagraphs.forEach(p => paragraphObserver.observe(p));
            signatureObserver.observe(messageParagraphs[messageParagraphs.length - 1]);
        });

        closeButton.addEventListener('click', () => {
            messageSection.classList.remove('is-active');
            heroSection.classList.remove('is-exiting');
            stickyBtnWrapper.style.opacity = '1';
            stickyBtnWrapper.style.pointerEvents = 'auto';
            updateProgressDots(0);

            // Reset status 'visible' paragraf setelah transisi selesai
            setTimeout(() => {
                messageParagraphs.forEach(p => p.classList.remove('is-visible'));
                finalSignature.classList.remove('is-visible');
            }, 1500);
        });

        // --- 4. Countdown Timer ---
        // !!! PENTING: Atur tanggal ulang tahun Raysha di sini !!!
        // FORMAT: YYYY-MM-DDTHH:MM:SS
        // CONTOH: '2025-10-29T00:00:00' (untuk 29 Oktober 2025)
        const birthdayDate = '2025-10-29T00:00:00'; 
        const targetDate = new Date(birthdayDate);

        function updateCountdown() {
            const now = new Date().getTime();
            const distance = targetDate.getTime() - now;

            if (distance <= 0) {
                // Waktu telah tiba!
                clearInterval(countdownInterval);
                countdownArea.style.gap = '0px';
                countdownArea.innerHTML = `
                    <div class="timer-unit" style="flex-grow: 1; backdrop-filter: blur(15px); border-color: rgba(212, 175, 55, 0.4);">
                        <span class="timer-number" style="font-size: 1.6rem; font-family: var(--font-elegant); letter-spacing: 0.1em; line-height: 1.5; text-shadow: 0 0 20px var(--color-gold-light);">
                            The wait is over.<br>Happy 18th Birthday, Raysha!
                        </span>
                    </div>
                `;
                // Beri animasi khusus untuk pesan "selesai"
                const finishedBox = countdownArea.querySelector('.timer-unit');
                if (finishedBox) {
                    finishedBox.style.animation = 'timer-pulse 2.5s ease-in-out infinite';
                    finishedBox.style.padding = '25px';
                }
            } else {
                // Kalkulasi waktu
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
                
                const f = (num) => num.toString().padStart(2, '0');

                // Update HTML
                countdownArea.innerHTML = `
                    <div class="timer-unit">
                        <span class="timer-number">${f(days)}</span>
                        <span class="timer-label">Days</span>
                    </div>
                    <div class="timer-unit">
                        <span class="timer-number">${f(hours)}</span>
                        <span class="timer-label">Hours</span>
                    </div>
                    <div class="timer-unit">
                        <span class="timer-number">${f(minutes)}</span>
                        <span class="timer-label">Minutes</span>
                    </div>
                    <div class="timer-unit">
                        <span class="timer-number">${f(seconds)}</span>
                        <span class="timer-label">Seconds</span>
                    </div>
                `;
            }
        }
        
        const countdownInterval = setInterval(updateCountdown, 1000);
        updateCountdown(); // Panggil sekali saat memuat

        // --- 5. PENINGKATAN: Parallax & 3D Tilt ---
        heroSection.addEventListener('mousemove', (e) => {
            if (messageSection.classList.contains('is-active')) return;

            const { clientWidth: width, clientHeight: height } = heroSection;
            const { clientX: x, clientY: y } = e;

            const xPct = (x - width / 2) / (width / 2); // -1 ke 1
            const yPct = (y - height / 2) / (height / 2); // -1 ke 1

            const maxTilt = 10; // Derajat kemiringan kartu
            const maxLayerMove = 30; // Pixel pergerakan latar

            // 1. 3D Tilt Kartu
            heroContent.style.transform = `rotateY(${xPct * maxTilt}deg) rotateX(${-yPct * maxTilt}deg)`;
            
            // 2. Parallax Latar
            parallaxLayers.forEach(layer => {
                const depth = parseFloat(layer.dataset.depth) || 0.1;
                const moveX = -(xPct * maxLayerMove * depth);
                const moveY = -(yPct * maxLayerMove * depth);
                layer.style.transform = `translate3d(${moveX}px, ${moveY}px, 0)`;
            });
        });

        heroSection.addEventListener('mouseleave', () => {
             heroContent.style.transform = `rotateY(0) rotateX(0)`;
             parallaxLayers.forEach(layer => {
                layer.style.transform = `translate3d(0, 0, 0)`;
            });
        });

        // --- 6. PENINGKATAN: Partikel Dinamis ---
        function createParticles(snowCount, sparkleCount) {
            const snowChars = ['‚ùÑÔ∏è', '‚ùÖ', '‚ùÜ'];
            
            // 1. Buat Salju
            for (let i = 0; i < snowCount; i++) {
                const snow = document.createElement('div');
                snow.classList.add('snowflake');
                const layer = parallaxLayers[Math.floor(Math.random() * parallaxLayers.length)];
                
                const size = Math.random() * 10 + 5; // 5px - 15px
                const duration = Math.random() * 10 + 15; // 15s - 25s
                const drift = (Math.random() - 0.5) * 200; // -100px - +100px
                
                snow.innerHTML = snowChars[Math.floor(Math.random() * snowChars.length)];
                snow.style.fontSize = `${size}px`;
                snow.style.left = `${Math.random() * 100}vw`;
                snow.style.animationDuration = `${duration}s`;
                snow.style.animationDelay = `${Math.random() * -duration}s`;
                snow.style.setProperty('--drift', `${drift}px`);
                snow.style.opacity = Math.random() * 0.5 + 0.3; // 0.3 - 0.8
                
                layer.appendChild(snow);
            }

            // 2. Buat Kilauan Es
            for (let i = 0; i < sparkleCount; i++) {
                const sparkle = document.createElement('div');
                sparkle.classList.add('ice-sparkle');
                const layer = parallaxLayers[Math.floor(Math.random() * parallaxLayers.length)];

                const duration = Math.random() * 6 + 4; // 4s - 10s
                sparkle.style.left = `${Math.random() * 100}vw`;
                sparkle.style.top = `${Math.random() * 100}vh`; // Mulai dari mana saja
                sparkle.style.animationDuration = `${duration}s`;
                sparkle.style.animationDelay = `${Math.random() * -duration}s`;
                
                layer.appendChild(sparkle);
            }
        }
        
        createParticles(70, 30); // Buat 70 salju, 30 kilauan

        // --- 7. PENINGKATAN: Animasi Scroll Pesan ---
        const paragraphObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('is-visible');
                    paragraphObserver.unobserve(entry.target);
                }
            });
        }, { root: messageSection, threshold: 0.2 });

        // Amati tanda tangan secara terpisah, picu saat paragraf TERAKHIR terlihat
        const signatureObserver = new IntersectionObserver((entries) => {
            if (entries[0].isIntersecting) {
                finalSignature.classList.add('is-visible');
                // CSS bawaan Anda memiliki delay, jadi ini akan memicunya
                signatureObserver.unobserve(entries[0].target);
            }
        }, { root: messageSection, threshold: 0.8 });

    });
    </script>
</body>
</html>


